class GoodDog
    def initialize(name) # constructor, an instance method
      # puts "This object was initialized!"
      @name = name # setting instance variable @name
    end

    def speak # an instance method
        "#{@name} says ARF!!"
    end
    
    # getter method
    # was: def get_name
    def name
        @name
    end

    # setter method
    # was: def set_name=(name)
    def name=(n)
        # was: @name = name
        @name = n
    end
end
  
